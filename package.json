{
  "name": "vite-react-ts-tailwind-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "build": "tsc -b && vite build",
    "lint": "run-p --continue-on-error lint:*",
    "lint:biome": "biome check",
    "lint:tsc": "tsc --build",
    "lint:prettier": "prettier --check src/",
    "lint-fix": "run-s lint-fix:*",
    "lint-fix:biome": "biome check --write --unsafe",
    "lint-fix:prettier": "prettier --write src/",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/vite": "^4.1.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.1",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.51.1",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.1.1",
    "vitest-browser-react": "^0.1.1"
  }
}
